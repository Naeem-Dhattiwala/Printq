<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">printq_newfields_edit_form.printq_newfields_edit_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Edit Form</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="close" class="Printq\NewFields\Block\Adminhtml\Printq\Edit\Field\Edit\BackButton"/>
            <button name="save" class="Printq\NewFields\Block\Adminhtml\Printq\Edit\Field\Edit\SaveButton"/>
        </buttons>
        <namespace>printq_newfields_edit_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>printq_newfields_edit_form.printq_newfields_edit_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="printq_newfields_edit_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Printq\NewFields\Model\DataProvider</argument>
            <argument name="name" xsi:type="string">printq_newfields_edit_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
    </dataSource>
    <fieldset name="printq_new_field">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true">Auftrag Datenfelder</item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>
        <field name="id" formElement="hidden">
            <settings>
                <dataType>text</dataType>
            </settings>
        </field>
        <field name="projekt">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Printq\NewFields\Model\Config\Source\Projekt</item>
                <item name="config" xsi:type="array">
                    <!-- <item name="additionalClasses" xsi:type="string">required</item> -->
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Projekt</item>
                    <item name="componentType" xsi:type="string">field</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</item>
                    <item name="elementTmpl" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                    <item name="dataScope" xsi:type="string">projekt</item>
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="showCheckbox" xsi:type="boolean">true</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">false</item>
                    <item name="levelsVisibility" xsi:type="number">1</item>
                    <item name="sortOrder" xsi:type="number">70</item>
                    <item name="required" xsi:type="boolean">true</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                    <item name="listens" xsi:type="array">
                        <item name="${ $.namespace }.${ $.namespace }:responseData" xsi:type="string">setParsed</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="verteilerschlussel">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Printq\NewFields\Model\Config\Source\Verteilerschlussel</item>
                <item name="config" xsi:type="array">
                    <!-- <item name="additionalClasses" xsi:type="string">required</item> -->
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Verteilerschlussel</item>
                    <item name="componentType" xsi:type="string">field</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</item>
                    <item name="elementTmpl" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                    <item name="dataScope" xsi:type="string">verteilerschlussel</item>
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="showCheckbox" xsi:type="boolean">true</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">false</item>
                    <item name="levelsVisibility" xsi:type="number">1</item>
                    <item name="sortOrder" xsi:type="number">80</item>
                    <!-- <item name="required" xsi:type="boolean">true</item> -->
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                    <item name="listens" xsi:type="array">
                        <item name="${ $.namespace }.${ $.namespace }:responseData" xsi:type="string">setParsed</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="verrechnungskostenstelle">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Verrechnungskostenstelle</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">order</item>
                    <item name="dataScope" xsi:type="string">verrechnungskostenstelle</item>
                    <item name="required" xsi:type="boolean">true</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="min_text_length" xsi:type="number">5</item>
                        <item name="max_text_length" xsi:type="number">5</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="verrechnungskonto">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Verrechnungskonto</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">order</item>
                    <item name="dataScope" xsi:type="string">verrechnungskonto</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="min_text_length" xsi:type="number">10</item>
                        <item name="max_text_length" xsi:type="number">10</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="bemerkung">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Bemerkung</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="source" xsi:type="string">order</item>
                    <item name="dataScope" xsi:type="string">bemerkung</item>
                    <!-- <item name="required" xsi:type="boolean">true</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="max_text_length" xsi:type="number">1500</item>
                    </item> -->
                </item>
            </argument>
        </field>
        <field name="wunschtermin" formElement="date">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">Wunschtermin</item>
                    <item name="label" xsi:type="string" translate="true">Wunschtermin</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="validate-date" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <visible>true</visible>
            </settings>
        </field>
    </fieldset>
</form>
<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">printq_storelocationsmanagement_softdrink_form.softdrink_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Printq\StoreLocationsManagement\Block\Adminhtml\SoftDrink\Edit\BackButton"/>
			<button name="delete" class="Printq\StoreLocationsManagement\Block\Adminhtml\SoftDrink\Edit\DeleteButton"/>
			<button name="save" class="Printq\StoreLocationsManagement\Block\Adminhtml\SoftDrink\Edit\SaveButton"/>
			<button name="save_and_continue" class="Printq\StoreLocationsManagement\Block\Adminhtml\SoftDrink\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>printq_storelocationsmanagement_softdrink_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>printq_storelocationsmanagement_softdrink_form.softdrink_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="softdrink_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="softdrink_form_data_source" class="Printq\StoreLocationsManagement\Model\SoftDrink\DataProvider">
			<settings>
				<requestFieldName>softdrink_id</requestFieldName>
				<primaryFieldName>softdrink_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field name="name" formElement="input" sortOrder="130">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">SoftDrink</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">Name</label>
				<dataScope>name</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
		</field>
		<field name="image_thumbnail">
		    <argument name="data" xsi:type="array">
		        <item name="config" xsi:type="array">
		            <item name="dataType" xsi:type="string">string</item>
		            <item name="source" xsi:type="string">SoftDrink</item>
		            <item name="label" xsi:type="string" translate="true">Image Thumbnail</item>
		            <item name="visible" xsi:type="boolean">true</item>
		            <item name="formElement" xsi:type="string">fileUploader</item>
		            <item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
		            <item name="previewTmpl" xsi:type="string">Printq_StoreLocationsManagement/image-preview</item>
		            <item name="required" xsi:type="boolean">true</item>
		            <item name="sortOrder" xsi:type="number">140</item>
		            <item name="uploaderConfig" xsi:type="array">
		                <item name="url" xsi:type="url" path="printq_storelocationsmanagement/feature_image/upload"/>
		            </item>
		            <item name="validation" xsi:type="array">
			    		<item name="required-entry" xsi:type="boolean">true</item>
					</item>
		        </item>
		    </argument>
		</field>
		<field name="image_print">
		    <argument name="data" xsi:type="array">
		        <item name="config" xsi:type="array">
		            <item name="dataType" xsi:type="string">string</item>
		            <item name="source" xsi:type="string">SoftDrink</item>
		            <item name="label" xsi:type="string" translate="true">Image Print</item>
		            <item name="visible" xsi:type="boolean">true</item>
		            <item name="formElement" xsi:type="string">fileUploader</item>
		            <item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
		            <item name="previewTmpl" xsi:type="string">Printq_StoreLocationsManagement/image-preview</item>
		            <item name="required" xsi:type="boolean">true</item>
		            <item name="sortOrder" xsi:type="number">150</item>
		            <item name="uploaderConfig" xsi:type="array">
		                <item name="url" xsi:type="url" path="printq_storelocationsmanagement/feature_image/upload"/>
		            </item>
		            <item name="validation" xsi:type="array">
			    		<item name="required-entry" xsi:type="boolean">true</item>
					</item>
		        </item>
		    </argument>
		</field>
	</fieldset>
</form>
